<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_list_item_height">
    <ImageView
        android:layout_height="@dimen/home_list_item_height"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/hli_image"
        android:src="@drawable/hli_default"
        android:scaleType="centerCrop"
        />
    <FrameLayout
        android:layout_height="@dimen/home_list_item_height"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shadow_article"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/hli_text"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:text="默认文字"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        />
    <FrameLayout
        android:layout_height="68dp"
        android:layout_width="80dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:id="@+id/hli_special"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/hli_special_recommend"
        />
</RelativeLayout>
